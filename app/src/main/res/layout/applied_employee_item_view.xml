<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#855D5D">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/googleg_standard_color_18" />
        <TextView
            android:id="@+id/tv_appliedEmployeeTitle_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dipankar_debnath"
            android:textColor="@color/white" />
        <ImageButton
            android:id="@+id/btn_appliedEmployeeDown_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_download" />
        <ImageButton
            android:id="@+id/btn_appliedEmployeeAccept_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check" />
        <ImageButton
            android:id="@+id/btn_appliedEmployeeReject_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear" />
    </LinearLayout>
</androidx.cardview.widget.CardView>