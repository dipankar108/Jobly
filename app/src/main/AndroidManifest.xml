<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.university_project.jobly">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jobly">
        <activity android:name=".client.AppliedEmployeeActivity"></activity>
        <activity android:name=".client.EditPostActivity" />
        <activity android:name=".employee.EmployeeActivity" />
        <activity android:name=".Emploee" />
        <activity android:name=".JobPostView" />
        <activity android:name=".client.ClientActivity" />
        <activity android:name=".CreateJobPost" />
        <activity android:name=".accountlog.AccountLog" />
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>